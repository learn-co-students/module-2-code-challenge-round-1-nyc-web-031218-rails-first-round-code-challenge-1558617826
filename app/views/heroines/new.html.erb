<h1> New Heroine Form</h1>
<%= form_for @heroine do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :super_name %>:
  <%= f.text_field :super_name %><br />

  <%= f.label :power_id %>
  <%= f.collection_select :power_id, Power.all, :id, :name%>

  <% if flash[:notice] %>
  <div class="notification is-primary global-notification">
    <p class="notice"><%= notice %></p>
  </div>
<% end %>
  <%= f.submit %>
<% end %>
