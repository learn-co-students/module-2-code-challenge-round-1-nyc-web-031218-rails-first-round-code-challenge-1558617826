<h2>Create New Heroine</h2>

<%if flash[:notice]%>
    <% flash[:notice].each do |notice| %>
        <%= notice %>
    <% end %>
<% end %>

<%=form_for @heroine do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
    
    <%= f.label :power_id %>
    <%= f.collection_select :power_id, @powers, :id, :name, prompt: true%>

    <%= f.submit %>
<% end %>