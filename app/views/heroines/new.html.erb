
<h1>  Heroine's info </h1>

<% if flash[:notice] %>
  <h3><%flash[:notice].each do |message| %></h3>
  <%= message %>
<%end%>
<%end%>

<%= form_for @heroine do |f| %>
<%= f.label :name %>
<%= f.text_field :name %></br>
<%= f.label :super_name %>
<%= f.text_field :super_name %></br>
<%= f.collection_select :power_id, Power.all, :id, :name, prompt: true%>
 <%= submit_tag("Submit") %>
 <%end%>
