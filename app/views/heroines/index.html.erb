<h2>All Heroines</h2>

<h3>Search By Super Power:</h3>
<%= form_tag heroine_search_path, method: "get" do %>
  <% if flash[:notice] %>
    <p><%= flash.now[:notice] %></p>
  <% end %>
  <%= label_tag :search_power, "Enter Power" %>
  <%= text_field_tag :search_power %>
  <%= submit_tag "Filer" %>
<%end %>

<br>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine.id) %>
    </li>
    <br>
  <% end %>
</ul>
