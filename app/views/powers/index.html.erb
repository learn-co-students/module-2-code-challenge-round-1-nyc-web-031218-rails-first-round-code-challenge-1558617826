<h2>All Superpowers</h2>

<ul>
  <% @powers.each do |power| %>
    <li>
      <%= link_to power.name, power_path(power) %>
      <br>
      Description: <%= power.description %>
    </li>
    <br>
  <% end %>
</ul>

<%= button_to "Create a new power", new_power_path, method: :get %>
<%= button_to "Back to Welcome Page", welcome_path, method: :get %>